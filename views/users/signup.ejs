<% layout("/layouts/boilerPlate") %>
<div class="row">
  <h2 class="col-8 offset-2">Signup for Wanderlust</h2>
  <div class="col-8 offset-2">
    <form method="POST" action="/signup" novalidate class="needs-validation">
        <br>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" class="form-control" required />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please enter a username.</div>
      </div>

      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" id="email" class="form-control" required type="email" />
        <div class="invalid-feedback">Please provide a valid email.</div>
      </div>

      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" class="form-control" required type="password" />
        <div class="invalid-feedback">Please enter a password.</div>
      </div>

      <button class="btn btn-success" type="submit">Signup</button>
    </form>
  </div>
</div>
